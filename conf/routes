# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /specs                      controllers.SpecController.list
# TODO Get /spec -> NEW spec

GET     /spec/:id                   controllers.SpecController.load(id: String)
POST    /spec/:id                   controllers.SpecController.save(id: String)

POST    /generate/:id               controllers.SpecController.generate(id: String)
POST    /validate/:id               controllers.SpecController.validate(id: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
